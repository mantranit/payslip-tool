{
  "name": "payslip-app",
  "description": "Payslip using Electron and Python.",
  "author": "Man Tran",
  "version": "0.1.3",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@date-io/moment": "^2.14.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.8.0",
    "@mui/lab": "^5.0.0-alpha.83",
    "@mui/material": "^5.8.0",
    "@mui/x-data-grid": "^5.11.1",
    "@mui/x-date-pickers": "^5.0.0-alpha.4",
    "moment": "^2.29.3",
    "node-sass": "^7.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-pdf": "^5.7.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "dev": "concurrently -k \"set BROWSER=none && npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "start": "electron-forge start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "depend": "cd build && npm install",
    "package": "electron-forge package",
    "clear": "rimraf build && rimraf out",
    "cpfile": "node ./copyfile.js",
    "artifact": "npm run clear && npm run build && npm run depend && npm run package && npm run cpfile && node ./artifact.js",
    "make": "electron-forge make"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^7.2.1",
    "cross-var": "^1.1.0",
    "electron": "^9.1.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-packager": "^15.5.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-wix-msi": "^4.0.0",
    "fs-extra": "^10.1.0",
    "python-shell": "^3.0.1",
    "rimraf": "^3.0.2",
    "wait-on": "^5.1.0"
  }
}
